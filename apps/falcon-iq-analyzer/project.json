{
  "name": "falcon-iq-analyzer",
  "projectType": "application",
  "root": "apps/falcon-iq-analyzer",
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "apps/falcon-iq-analyzer",
        "command": "uv run ruff check --config pyproject.toml src/"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "apps/falcon-iq-analyzer",
        "command": "uv run pytest tests/ -v"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/falcon-iq-analyzer",
        "command": "uv sync --extra dev"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/falcon-iq-analyzer",
        "command": "uv run uvicorn falcon_iq_analyzer.main:app --host 0.0.0.0 --port 8000 --reload"
      }
    }
  },
  "tags": []
}
