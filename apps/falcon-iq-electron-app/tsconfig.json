{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Override base config for Vite/browser environment
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "composite": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    // Electron app specific settings
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": [
      "node",
      "react",
      "react-dom",
      "vite/client"
    ],
    // Path mappings (note: paths don't merge from extends, so we must include shared paths here)
    "paths": {
      "@libs/shared/*": [
        "../../libs/shared/src/*"
      ],
      "@libs/integrations/github/*": [
        "../../libs/integrations/github/src/*"
      ],
      "@styles/*": [
        "src/renderer/styles/*"
      ],
      "@app/*": [
        "src/renderer/app/*"
      ],
      "@components/*": [
        "src/renderer/components/*"
      ],
      "@routes/*": [
        "src/renderer/routes/*"
      ],
      "@generatedtypes/*": [
        "src/renderer/types/*"
      ],
      "@utils/*": [
        "src/renderer/utils/*"
      ],
      "@hooks/*": [
        "src/renderer/hooks/*"
      ],
      "@contexts/*": [
        "src/renderer/contexts/*"
      ],
      "@services/*": [
        "src/renderer/services/*"
      ],
      "@assets/*": [
        "src/renderer/assets/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "vite.main.config.mts",
    "vite.preload.config.mts",
    "vite.renderer.config.mts",
    "forge.config.ts",
    "forge.env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vite"
  ],
  "references": [
    {
      "path": "../../libs/shared"
    }
  ]
}
