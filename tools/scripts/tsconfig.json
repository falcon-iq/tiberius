{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "baseUrl": "../..",
        "paths": {
            "@libs/shared/*": [
                "libs/shared/src/*"
            ],
            "@libs/integrations/github": [
                "libs/integrations/src/github/index.ts"
            ],
            "@libs/integrations/github/*": [
                "libs/integrations/src/github/*"
            ]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}